---
import { formatDate } from "../utils/date";
import type { CollectionEntry } from "astro:content";

const { items = [] } = Astro.props as { items: CollectionEntry<"posts">[] };
---

<section style="margin: 2rem 0;">
  <div class="section-title">
    <span>时间线</span>
  </div>
  <div style="display:grid;gap:1rem;">
    {items.map((post) => (
      <div style="display:grid;grid-template-columns:140px 1fr;gap:1rem;align-items:start;">
        <div class="muted" style="font-weight:600;">{formatDate(post.data.date)}</div>
        <div class="card">
          <a href={`/blog/${post.slug}`} style="font-weight:700;letter-spacing:-0.01em;">{post.data.title}</a>
          <p style="margin:0.35rem 0;color:#4b5563;">{post.data.summary}</p>
          {post.data.tags?.length > 0 && (
            <div style="display:flex;gap:0.5rem;flex-wrap:wrap;">
              {post.data.tags.map((tag: string) => (
                <span style="background:rgba(107,114,128,0.12);padding:0.2rem 0.55rem;border-radius:999px;font-size:0.85rem;">#{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</section>

